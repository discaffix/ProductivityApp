<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:drawing="using:System.Drawing">
    <SolidColorBrush x:Key="ThemeControlForegroundBaseHighBrush" Color="{ThemeResource SystemBaseHighColor}" />

    <Brush x:Key="MainBackgroundColor">#070707</Brush>
    <Brush x:Key="ButtonBackgroundColor">#131313</Brush>
    <Brush x:Key="ItemAndPaneBackgroundColor">#040404</Brush>
    <Brush x:Key="DefaultTextColor">#CDCDCD</Brush>

    <Style x:Key="ButtonStyle" TargetType="Control">
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundColor}" />
        <Setter Property="Foreground" Value="{StaticResource DefaultTextColor}" />
        <Setter Property="BorderThickness" Value="0" />
        <!--<Setter Property="Margin" Value="{StaticResource SmallTopRightMargin}" />-->
    </Style>

    <Style
        x:Key="AutoSuggestBoxStyle"
        BasedOn="{StaticResource ButtonStyle}"
        TargetType="AutoSuggestBox" />

</ResourceDictionary>
