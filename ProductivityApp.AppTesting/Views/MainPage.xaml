<Page
    x:Class="ProductivityApp.AppTesting.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"

    Style="{StaticResource PageStyle}"
    mc:Ignorable="d" Loaded="Page_LoadedAsync">

    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            x:Uid="Main_Title"
            Style="{StaticResource PageTitleStyle}" />
        <Grid
            Grid.Row="1" 
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            
            <StackPanel>
                <TextBox
                    Text="{x:Bind ViewModel.SessionDescription, Mode=TwoWay}"
                    PlaceholderText="What are you currently working on?" />
                <StackPanel
                    Orientation="Horizontal">
                    <Button
                        Content="Start Session"
                        Margin="0,5,0,0"
                        IsEnabled="{x:Bind ViewModel.StartSessionBtnEnabled, Mode=OneWay}"
                        Command="{x:Bind ViewModel.StartSession}"/>
                    <Button
                        Content="Stop Session"
                        Margin="15,5,0,0"
                        IsEnabled = "{x:Bind ViewModel.StopSessionBtnEnabled, Mode=OneWay}"
                        Command="{x:Bind ViewModel.StopSession}"/>
                    <Button
                        Margin="15,5,0,0"
                        Content="Project">
                        <Button.Flyout>
                            <Flyout Placement="Bottom">
                                <StackPanel>
                                    <TextBox
                                        PlaceholderText="Search for project"
                                        Text = "{x:Bind ViewModel.ProjectSearchField, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                        <interactivity:Interaction.Behaviors>
                                            <core:EventTriggerBehavior EventName="KeyDown">
                                                <core:InvokeCommandAction Command="{x:Bind ViewModel.SearchFieldEnterCommand}" />
                                            </core:EventTriggerBehavior>
                                        </interactivity:Interaction.Behaviors>
                                    </TextBox>
                                    <!--<TextBlock Text="{x:Bind ViewModel.ProjectSearchField, Mode=OneWay}"/>-->
                                    <ListView ItemsSource="{x:Bind ViewModel.QueriedProjects, Mode=OneWay}">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ProjectName}"/>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                    <TextBlock Text="{x:Bind ViewModel.ElapsedTime, Mode=OneWay}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="25,0,0,0"/>
                </StackPanel>

                <ListView ItemsSource="{x:Bind ViewModel.Sessions}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Description}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
